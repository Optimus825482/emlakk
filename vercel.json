{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/crawl-list",
      "schedule": "0 6,14,22 * * *"
    },
    {
      "path": "/api/cron/crawl-detail",
      "schedule": "0 8,16,0 * * *"
    },
    {
      "path": "/api/cron/verify-listings",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 3 * * 0"
    }
  ],
  "functions": {
    "api/cron/**": {
      "maxDuration": 300
    },
    "api/collector/**": {
      "maxDuration": 300
    }
  }
}
